class Program
    {
        static void Main(string[] args)
        {
            int sayi;
            Console.Write("SAYIYI GİRİNİZ= ");
            sayi = Convert.ToInt32(Console.ReadLine());
            if(sayi%2==0)
            {
                Console.WriteLine("Girdiğiniz sayı ÇİFTTİR");
            }
            else
            {
                Console.WriteLine("Girdiğiniz sayı TEKTİR");
            }
            Console.ReadKey();
        }
    }
